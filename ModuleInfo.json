{
  "Name": "Syati Extended Save Files",
  "Author": "VTXG, Evanbowl",
  "Description": "A module that allows the creation of new binary data chunks in GameData.bin.",
  "APIId": "Syati_ExtGameData_API",
  "CompilerFlags": [
    "-DEXT_GAME_DATA"
  ],
  "ModuleExtensionDefinition": [
    {
      "Name": "NewSaveChunk",
      "CodeGenTemplateSources": [
        "GEN_ExtGameData.h",
        "GEN_ExtGameDataUtil.h"
      ],
      "CodeGenTemplateDestinations": [
        "codebuild/ModuleData_ExtGameData.h",
        "codebuildexport/ModuleData_ExtGameDataUtil.h"
      ],
      "Variables": [
        "SaveChunkEntry",
        "SaveChunkSignature",
        "Include"
      ],
      "CodeGenData": [
        {
          "ReplaceTargetName": "SaveChunkList",
          "ReplaceFormatData": "{0},"
        },
        {
          "ReplaceTargetName": "ChunkAccessList",
          "ReplaceFormatData": "#define SAVE_CHUNK_{1} ExtGameDataUtil::getChunk('{1}')"
        },
        {
          "ReplaceTargetName": "IncludeList",
          "ReplaceFormatData": "#include \"{2}\""
        }
      ]
    }
  ]
}